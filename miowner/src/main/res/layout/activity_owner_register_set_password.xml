<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Owner_grey_f1f1f1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y205"
        android:background="@drawable/owner_shape_register_password"
        android:orientation="vertical">

        <EditText
            android:id="@+id/register_passowrd_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:background="@color/Owner_white_ffffff"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:maxLength="11"
            android:textColor="@color/Owner_black_000000"
            android:textSize="@dimen/textsize_26px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/Owner_grey_d2d2d2" />

        <EditText
            android:id="@+id/register_redo_passowrd_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:background="@color/Owner_white_ffffff"
            android:gravity="center_vertical"
            android:hint="请再次输入密码"
            android:maxLength="11"
            android:textColor="@color/Owner_black_000000"
            android:textSize="@dimen/textsize_26px" />

    </LinearLayout>

</LinearLayout>