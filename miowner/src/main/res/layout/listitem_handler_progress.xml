<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/x95"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <View
            android:id="@+id/view_item_left_top_line"
            android:layout_width="@dimen/x5"
            android:layout_height="12dp"
            android:layout_marginBottom="-1dp"
            android:layout_marginTop="-1dp"
            android:background="@color/text_d3d3d3" />

        <ImageView
            android:id="@+id/img_item_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/greenpoint" />

        <View
            android:id="@+id/view_item_left_bottom_line"
            android:layout_width="@dimen/x5"
            android:layout_height="match_parent"
            android:layout_marginBottom="-1dp"
            android:layout_marginTop="-1dp"
            android:background="@color/text_d3d3d3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_handler_progress_divide"
            style="@style/view_grayd1d1d1_divider"
            android:layout_marginRight="@dimen/x15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x15"
            android:paddingRight="@dimen/x15"
            android:paddingTop="@dimen/x15">

            <TextView
                android:id="@+id/tv_item_progress_name"
                style="@style/tv_Gray959595_Szie32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跟进人：李狗蛋    职位：客服"
                android:textColor="@color/green_32b16c"
                android:textSize="@dimen/textsize_28px" />

            <TextView
                android:id="@+id/tv_item_progress_desc"
                style="@style/tv_Gray959595_Szie32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y15"
                android:text="去工地验收"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_28px" />

            <TextView
                android:id="@+id/tv_item_progress_time"
                style="@style/tv_Gray959595_Szie32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y15"
                android:text="2016-04-29 16:23:45"
                android:textColor="@color/green_32b16c"
                android:textSize="@dimen/textsize_26px" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
