<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_eeeeee">

    <View
        android:id="@+id/view_order_detail_divide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:layout_alignParentTop="true"
        android:background="@color/white_ffffff" />

    <LinearLayout
        android:id="@+id/ll_order_detail_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view_order_detail_divide"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_material_name"
                style="@style/textview_black_313131"
                android:text="玻化砖" />

            <TextView
                android:id="@+id/tv_material_order_num"
                style="@style/textview_black_313131"
                android:text="订单编号 : 13246" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_detail_item_brand"
        style="@style/textview_black_313131"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ll_order_detail_item_header"
        android:padding="@dimen/x15"
        android:text="陶瓷格莱美" />

    <TextView
        android:id="@+id/tv_order_detail_item_norms"
        style="@style/textview_black_313131"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_order_detail_item_brand"
        android:padding="@dimen/x15"
        android:text="好美佳，粉色自然石" />

    <TextView
        android:id="@+id/tv_order_detail_item_unit_price"
        style="@style/textview_gray_959595"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_order_detail_item_brand"
        android:layout_marginRight="@dimen/x12"
        android:padding="@dimen/x15"
        android:text="￥60.00" />

    <TextView
        android:id="@+id/tv_order_detail_item_unit"
        style="@style/textview_gray_959595"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_order_detail_item_norms"
        android:padding="@dimen/x15"
        android:text="包" />

    <TextView
        android:id="@+id/tv_order_detail_item_count"
        style="@style/textview_gray_959595"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_order_detail_item_unit_price"
        android:layout_marginRight="@dimen/x12"
        android:padding="@dimen/x15"
        android:text="x4" />

    <TextView
        android:id="@+id/tv_order_detail_item_loss_percentage"
        style="@style/textview_gray_959595"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_order_detail_item_unit"
        android:padding="@dimen/x15"
        android:text="7%"
        />

    <TextView
        android:id="@+id/tv_order_detail_item_loss_count"
        style="@style/textview_gray_959595"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_order_detail_item_loss_percentage"
        android:padding="@dimen/x10"
        android:text="1.07"
         />

    <TextView
        android:id="@+id/tv_order_detail_item_remark"
        style="@style/textview_gray_959595"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_order_detail_item_loss_count"
        android:layout_marginLeft="@dimen/x12"
        android:padding="@dimen/x10" />


    <LinearLayout
        android:id="@+id/ll_order_detail_item_comment"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_order_detail_item_remark"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_detail_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/x12"
            android:background="@drawable/shape_text_red_stroke"
            android:gravity="center"
            android:minWidth="@dimen/x150"
            android:padding="@dimen/x12"
            android:text="评价"
            android:textColor="@color/red_e76170" />

        <View
            style="@style/view_grayd1d1d1_divider"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15" />

    </LinearLayout>

</RelativeLayout>
