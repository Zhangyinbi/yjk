<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f1f1f1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fragment_question_info_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:background="@color/text_d3d3d3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_fragment_question_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x25"
            android:src="@mipmap/waiting" />

        <TextView
            android:id="@+id/tv_fragment_question_info_static"
            style="@style/tv_Gray959595_Szie32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:text="问题待解决"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y136"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/x15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/tv_Gray959595_Szie32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相关部门："
                android:textSize="@dimen/textsize_28px" />

            <TextView
                android:id="@+id/tv_fragment_question_info_dep"
                style="@style/tv_Gray959595_Szie32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="施工队长"
                android:textSize="@dimen/textsize_28px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/tv_Gray959595_Szie32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="责  任  人："
                android:textSize="@dimen/textsize_28px" />

            <TextView
                android:id="@+id/tv_fragment_question_info_duty"
                style="@style/tv_Gray959595_Szie32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李狗蛋"
                android:textColor="@color/red_ff0000"
                android:textSize="@dimen/textsize_28px" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_fragment_question_info_desc"
        style="@style/tv_Gray959595_Szie32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x15"
        android:text="去工地验收"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/ll_listitem_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_listitem_question_desc"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_project_info1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_project_info2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="23dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_project_info3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y234"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/x15">

        <TextView
            android:id="@+id/tv_fragment_question_info_start_time"
            style="@style/tv_Gray959595_Szie32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="问题提出时间："
            android:textSize="@dimen/textsize_28px" />

        <TextView
            android:id="@+id/tv_fragment_question_info_issued_time"
            style="@style/tv_Gray959595_Szie32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="问题下发时间："
            android:textSize="@dimen/textsize_28px" />

        <TextView
            android:id="@+id/tv_fragment_question_info_pre_time"
            style="@style/tv_Gray959595_Szie32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="预计完成时间："
            android:textSize="@dimen/textsize_28px" />

        <TextView
            android:id="@+id/tv_fragment_question_info_solve_time"
            style="@style/tv_Gray959595_Szie32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="实际解决时间："
            android:textSize="@dimen/textsize_28px" />

    </LinearLayout>

</LinearLayout>
