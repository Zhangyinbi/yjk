<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_style6_808080">

    <ProgressBar
        android:id="@+id/activity_gallery_pb"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="@dimen/x96"
        android:layout_height="@dimen/y96"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <com.hbw.library.pictureview.HackyViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"></com.hbw.library.pictureview.HackyViewPager>

</RelativeLayout>