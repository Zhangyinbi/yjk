<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_dcdbdb"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_jiaodi_yanshou"
                style="@style/tv_gray7d7d7d_Size34_round_style"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x15"
                android:layout_weight="1"
                android:text="交底验收"/>

            <TextView
                android:id="@+id/tv_shuidian_yanshou"
                style="@style/tv_gray7d7d7d_Size34_round_style"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:layout_weight="1"
                android:text="水电验收"/>

            <TextView
                android:id="@+id/tv_nimu_yanshou"
                style="@style/tv_gray7d7d7d_Size34_round_style"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:text="泥木验收"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_youqi_yanshou"
                style="@style/tv_gray7d7d7d_Size34_round_style"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x15"
                android:layout_weight="1"
                android:text="油漆验收"/>

            <TextView
                android:id="@+id/tv_jungong_yanshou"
                style="@style/tv_gray7d7d7d_Size34_round_style"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:layout_weight="1"
                android:text="竣工验收"/>

            <TextView
                android:id="@+id/tv_zengbu_yanshou"
                style="@style/tv_gray7d7d7d_Size34_round_style"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:text="增补验收"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="#f0f0f0"/>

    <ListView
        android:id="@+id/check_bill_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:listSelector="#00000000"/>

    <LinearLayout
        android:id="@+id/patrol_record_add_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:orientation="horizontal">
    </LinearLayout>

</LinearLayout>
