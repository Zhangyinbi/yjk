<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_50"
        android:background="@drawable/shape_round_whitebg"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:background="@drawable/password_icon" />

        <EditText
            android:id="@+id/set_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="设置新密码 (字母/数字/6位)"
            android:inputType="textPassword"
            android:maxLength="18"
            android:padding="@dimen/dimen_10"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_5"
        android:background="@drawable/shape_round_whitebg"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:background="@drawable/password_icon" />

        <EditText
            android:id="@+id/set_new_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="确认新密码 (字母/数字/6位)"
            android:inputType="textPassword"
            android:maxLength="18"
            android:padding="@dimen/dimen_10"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_18" />
    </LinearLayout>

    <Button
        android:id="@+id/set_password_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_50"
        android:background="@drawable/selector_bg_login"
        android:onClick="onClick"
        android:padding="@dimen/dimen_10"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>