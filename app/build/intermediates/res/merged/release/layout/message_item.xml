<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f1f1f1"
    android:orientation="vertical"
    android:padding="@dimen/x24">

    <LinearLayout
        android:id="@+id/linear_msg_title_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x24"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <View
            style="@style/view_grayd1d1d1_divider"
            android:layout_marginRight="@dimen/x46"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_msg_title_time"
            style="@style/tv_Gray959595_Szie32"
            android:text="今日"
            android:textSize="@dimen/textsize_30px" />

        <View
            style="@style/view_grayd1d1d1_divider"
            android:layout_marginLeft="@dimen/x46"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_msg_address"
            style="@style/tv_Black000000_Szie32"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y25"
            android:text="地址" />

        <TextView
            android:id="@+id/tv_msg_check_type"
            style="@style/tv_Black000000_Szie32"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y25"
            android:text="水电阶段 申请验收" />


        <TextView
            android:id="@+id/tv_msg_check_time"
            style="@style/tv_Black000000_Szie32"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y25"
            android:text="时间" />

        <View style="@style/view_grayd1d1d1_divider" />

        <TextView
            android:id="@+id/tv_msg_xiadan"
            style="@style/tv_Black000000_Szie32"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="@dimen/y32"
            android:text="上传验收单"
            android:textSize="@dimen/textsize_34px" />

    </LinearLayout>


</LinearLayout>
