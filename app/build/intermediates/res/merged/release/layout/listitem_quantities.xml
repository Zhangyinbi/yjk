<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/x24">

        <TextView
            android:id="@+id/tv_listitem_quantities_title"
            style="@style/tv_Gray959595_Szie32"
            android:text="二层黄沙，。。"
            android:textSize="@dimen/textsize_36px" />

        <View
            style="@style/view_grayd1d1d1_divider"
            android:layout_height="@dimen/y2"
            android:layout_marginBottom="@dimen/y24"
            android:layout_marginTop="@dimen/y20" />

        <TextView
            android:id="@+id/tv_listitem_quantities_brand"
            style="@style/tv_Black000000_Szie32"
            android:text="无品牌"
            android:textSize="@dimen/textsize_36px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_listitem_quantities_type"
                style="@style/tv_Gray959595_Szie32"
                android:layout_marginTop="@dimen/y15"
                android:text="防水石膏板"
                android:textSize="@dimen/textsize_36px" />

            <TextView
                android:id="@+id/tv_listitem_quantities_count"
                style="@style/tv_Gray959595_Szie32"
                android:layout_marginTop="@dimen/y15"
                android:layout_weight="1"
                android:gravity="right"
                android:text="x1"
                android:textSize="@dimen/textsize_36px" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_listitem_quantities_remark"
            style="@style/tv_Black000000_Szie32"
            android:layout_marginTop="@dimen/y20"
            android:text="备注"
            android:textSize="@dimen/textsize_36px" />

        <TextView
            android:id="@+id/tv_listitem_quantities_money"
            style="@style/tv_Black000000_Szie32"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginTop="@dimen/y20"
            android:text="1280.00元"
            android:textSize="@dimen/textsize_36px" />

        <TextView
            android:id="@+id/tv_listitem_quantities_order_time"
            style="@style/tv_Black000000_Szie32"
            android:text="下单时间"
            android:textSize="@dimen/textsize_36px" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/gray_f1f1f1" />

</LinearLayout>
