<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/gray_f1f1f1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <TextView
            android:id="@+id/tv_large_type"
            style="@style/tv_Gray959595_Szie32"
            android:layout_alignParentLeft="true"
            android:text="@string/str_snhs"
            android:textSize="@dimen/textsize_34px" />

        <!--<TextView
            android:id="@+id/tv_orders_time"
            style="@style/tv_Gray959595_Szie32"
            android:layout_alignParentRight="true"
            android:text="下单时间：2015-09-01"
            android:textSize="@dimen/textsize_34px" />-->

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_listitem_schedule_order_number"
        style="@style/tv_Gray959595_Szie32"
        android:paddingBottom="@dimen/x20"
        android:paddingLeft="@dimen/x20"
        android:text="订单编号："
        android:textSize="@dimen/textsize_30px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_f4f4f4"
        android:padding="@dimen/x20">

        <TextView
            android:id="@+id/tv_brand"
            style="@style/tv_Black000000_Szie32"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginTop="@dimen/y10"
            android:text="无品牌"
            android:textSize="@dimen/textsize_36px" />

        <TextView
            android:id="@+id/tv_listitem_schedule_name"
            style="@style/tv_Black000000_Szie32"
            android:layout_below="@+id/tv_brand"
            android:text="恒晟批发仓库好美佳"
            android:textSize="@dimen/textsize_36px" />

        <TextView
            android:id="@+id/tv_type_model"
            style="@style/tv_Gray959595_Szie32"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_listitem_schedule_name"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginTop="@dimen/y15"
            android:text="散装中沙，1t"
            android:textSize="@dimen/textsize_36px" />

        <TextView
            android:id="@+id/tv_type_model_count"
            style="@style/tv_Gray959595_Szie32"
            android:layout_alignBottom="@+id/tv_type_model"
            android:layout_alignParentRight="true"
            android:text="x1"
            android:textSize="@dimen/textsize_34px" />

        <TextView
            android:id="@+id/tv_beizhu"
            style="@style/tv_Black000000_Szie32"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_type_model"
            android:layout_marginBottom="@dimen/y15"
            android:text="我是备注"
            android:textSize="@dimen/textsize_34px" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/tv_Black000000_Szie32"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_beizhu"
            android:text="75.00元"
            android:textSize="@dimen/textsize_34px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_orders_time"
        style="@style/tv_Gray959595_Szie32"
        android:paddingBottom="@dimen/x5"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x10"
        android:text="材料下单时间"
        android:textSize="@dimen/textsize_30px" />

    <TextView
        android:id="@+id/tv_pre_arrive_time"
        style="@style/tv_Gray959595_Szie32"
        android:paddingBottom="@dimen/x5"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x10"
        android:text="@string/str_pre_time"
        android:textSize="@dimen/textsize_30px" />

    <TextView
        android:id="@+id/tv_pra_arrive_time"
        style="@style/tv_Gray959595_Szie32"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x5"
        android:text="@string/str_pra_time"
        android:textSize="@dimen/textsize_30px" />

    <View
        style="@style/view_grayd1d1d1_divider"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y5" />

    <RelativeLayout
        android:id="@+id/linear_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/x20">

        <TextView
            android:id="@+id/tv_orders_state"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x60"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/y15"
            android:gravity="center"
            android:text="@string/str_returns"
            android:textColor="@color/text_f39700"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_listitem_order_delay"
            style="@style/tv_Gray959595_Szie32"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x35"
            android:layout_toRightOf="@id/tv_orders_state"
            android:textColor="@color/red_c30d22"
            android:textSize="@dimen/textsize_34px" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x60"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_text_red_stroke"
            android:gravity="center"
            android:text="@string/str_confirm_recive"
            android:textColor="@color/red_e76170" />
    </RelativeLayout>

</LinearLayout>
