<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF1EC"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/contacts_list_item_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bg_set"
        android:padding="@dimen/dimen_12" >

        <TextView
            android:id="@+id/list_item_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_toLeftOf="@+id/list_item_phone_img"
            android:text="13024124867"
            android:textColor="@drawable/selector_text_color_white_black"
            android:textSize="@dimen/textsize_16" />

        <ImageView
            android:id="@+id/list_item_phone_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_phone" />

        <TextView
            android:id="@+id/list_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:maxLength="12"
            android:gravity="center_vertical"
            android:text="曹小勇（施工队长）"
            android:textColor="@drawable/selector_text_color_white_black"
            android:textSize="@dimen/textsize_16" />
    </RelativeLayout>

</LinearLayout>