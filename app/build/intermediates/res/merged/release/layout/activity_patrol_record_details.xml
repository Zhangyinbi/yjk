<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dimen_10"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="问题描述"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/patrol_record_add_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="start"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/textsize_14" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:src="@drawable/dashed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dimen_10"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="材料描述"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/patrol_record_add_material_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="start"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/textsize_14" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:src="@drawable/dashed" />

            <LinearLayout
                android:id="@+id/isPhasename"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dimen_10"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="施工阶段"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/phasename"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="start"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/textsize_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fine_cause_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dimen_10"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="罚款原因"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/fine_cause"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="start"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/textsize_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/isAmerce_money"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dimen_10"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="罚款金额"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/amerce_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="start"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/textsize_14" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/isConfiguation_audit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dimen_10"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="审核状态"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/configuation_audit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="start"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/textsize_14" />

            </LinearLayout>

            <ImageView
                android:id="@+id/myImageVidew"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:src="@drawable/dashed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dimen_10"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="现场照片"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_14" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <com.youjuke.miprojectmanager.view.MyGridView
                        android:id="@+id/patrol_record_add_ONE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="@color/black"
                        android:listSelector="@color/black"
                        android:numColumns="3"></com.youjuke.miprojectmanager.view.MyGridView>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:src="@drawable/dashed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dimen_10"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="业主沟通"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_14" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <com.youjuke.miprojectmanager.view.MyGridView
                        android:id="@+id/patrol_record_add_TWO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="@color/black"
                        android:listSelector="@color/black"
                        android:numColumns="3">

                    </com.youjuke.miprojectmanager.view.MyGridView>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:src="@drawable/dashed" />

            <LinearLayout
                android:id="@+id/patrol_record_add_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dimen_10"
                android:layout_weight="0"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>