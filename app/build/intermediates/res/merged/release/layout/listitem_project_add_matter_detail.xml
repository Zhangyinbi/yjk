<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_material_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="二层花样、异性吊顶（单层防水石膏板）"
        android:textSize="@dimen/textsize_32px"
        android:textColor="@color/text_959595"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y280"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:background="@color/Owner_grey_e5e5e5">

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="无"
            android:textColor="@color/text_000000"
            android:textSize="@dimen/textsize_32px"/>

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="防水石膏板"
            android:textColor="@color/text_959595"
            android:textSize="@dimen/textsize_32px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_act_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="320元"
                android:textColor="@color/text_000000"
                android:textSize="@dimen/textsize_32px"/>

            <TextView
                android:id="@+id/tv_act_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingRight="10dp"
                android:gravity="right"
                android:text="x4"
                android:textColor="@color/text_959595"
                android:textSize="@dimen/textsize_32px"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_shl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="损耗率 110%"
            android:textColor="@color/text_959595"
            android:textSize="@dimen/textsize_30px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tv_act_total_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:textSize="@dimen/textsize_30px"
            android:gravity="center_vertical"
            android:textColor="@color/text_959595"
            android:text="合计 : 240元（含运费0元）"/>

        <View
            style="@style/view_grayd1d1d1_divider"
            android:layout_marginRight="@dimen/dimen_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:paddingTop="@dimen/y25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_zjx_pay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:textSize="@dimen/textsize_32px"
                android:textColor="@color/text_f39700"
                android:text="已付 "/>

            <TextView
                android:id="@+id/tv_zjx_paytime"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_30px"
                android:textColor="@color/text_959595"
                android:gravity="right"
                android:layout_marginBottom="@dimen/y15"
                android:paddingRight="10dp"
                android:text="付款时间 : 2016-03-16 15:04:32"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/Owner_grey_e5e5e5"/>


</LinearLayout>