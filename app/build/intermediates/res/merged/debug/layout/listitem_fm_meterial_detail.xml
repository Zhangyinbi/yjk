<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tv_material_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_32px"
            android:textColor="@color/text_959595"
            android:layout_marginBottom="@dimen/y10"
            android:text="B 玻化砖"/>

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_32px"
            android:textColor="@color/text_959595"
            android:text="订单编号 : "/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:layout_gravity="center_vertical"
        android:background="@color/Owner_grey_e5e5e5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_32px"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/y15"
            android:text="好美佳"/>

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_32px"
            android:textColor="@color/text_959595"
            android:layout_marginBottom="@dimen/y30"
            android:text="粉色自然石"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_act_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_32px"
                android:textColor="@color/black"
                android:text="60.00元 "/>

            <TextView
                android:id="@+id/tv_act_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:textSize="@dimen/textsize_32px"
                android:textColor="@color/black"
                android:text="x4 "/>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tv_act_total_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:textSize="@dimen/textsize_30px"
            android:gravity="center_vertical"
            android:textColor="@color/text_959595"
            android:text="合计 : 240元（含运费0元）"/>

        <View
            style="@style/view_grayd1d1d1_divider"
            android:layout_marginRight="@dimen/dimen_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:paddingTop="@dimen/y25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_zjx_pay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_32px"
                android:textColor="@color/text_f39700"
                android:text="已付 "/>

            <TextView
                android:id="@+id/tv_zjx_paytime"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_30px"
                android:textColor="@color/text_959595"
                android:gravity="right"
                android:layout_marginBottom="@dimen/y15"
                android:paddingRight="10dp"
                android:text="付款时间 : 2016-03-16 15:04:32"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/Owner_grey_e5e5e5"/>

</LinearLayout>