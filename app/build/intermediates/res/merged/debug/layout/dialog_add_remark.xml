<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@color/gray_f1f1f1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/tv_Gray959595_Szie32"
            android:layout_marginLeft="@dimen/x20"
            android:layout_weight="1"
            android:text="请添加延期备注" />

        <ImageView
            android:id="@+id/imgv_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_gray_btn_bg"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:src="@drawable/ic_build_close" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_dialog_remark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y400"
        android:background="@null"
        android:gravity="left|top"
        android:hint="请输入延期备注"
        android:padding="@dimen/x20" />


    <View
        android:id="@+id/view_dialog_divider"
        style="@style/view_grayd1d1d1_divider"
        android:layout_above="@+id/tv_dialog_add_remark_ok" />

    <TextView
        android:id="@+id/tv_dialog_add_remark_ok"
        style="@style/tv_Rede76170_Szie34"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@drawable/selector_gray_btn_bg"
        android:gravity="center"
        android:text="确定" />

</LinearLayout>
