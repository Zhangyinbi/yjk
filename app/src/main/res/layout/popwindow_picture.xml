<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_5"
    android:paddingLeft="@dimen/dimen_10"
    android:paddingRight="@dimen/dimen_10" >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_round_whitebg"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="@dimen/dimen_10"
        android:text="选取照片"
        android:textColor="#434343"
        android:textSize="@dimen/textsize_17" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divier"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/textView_pop_chang_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/selector_text_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="拍摄"
        android:textColor="@drawable/selector_text_color_blue"
        android:textSize="@dimen/textsize_20" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divier"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/textView_pop_chang_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/selector_text_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="相册"
        android:textColor="@drawable/selector_text_color_blue"
        android:textSize="@dimen/textsize_20" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divier"
        android:contentDescription="@string/app_name" />
    <TextView
        android:id="@+id/textView_pop_window_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_text_bg"
        android:clickable="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_10"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="@string/cancel"
        android:textColor="@drawable/selector_text_color_blue"
        android:textSize="@dimen/textsize_20" />

</LinearLayout>