<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_list_white_gray">

    <RelativeLayout
        android:id="@+id/rl_build_site_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/owner_name_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/textView_status"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/processomg"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="业主姓名："
                android:textColor="@color/name"
                android:textSize="@dimen/textsize_18" />

            <TextView
                android:id="@+id/textView_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView1"
                android:layout_toRightOf="@+id/textView1"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_17" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/contact_phone_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/owner_name_relative"
            android:layout_toLeftOf="@+id/line_view"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话："
                android:textColor="@color/name"
                android:textSize="@dimen/textsize_18" />

            <TextView
                android:id="@+id/textView_item_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_17" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_phone_linear"
            android:layout_toLeftOf="@+id/line_view"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="装修地址："
                android:textColor="@color/name"
                android:textSize="@dimen/textsize_18" />

            <TextView
                android:id="@+id/textView_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_17" />
        </LinearLayout>

        <ImageView
            android:id="@+id/line_view"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_below="@+id/owner_name_relative"
            android:layout_toLeftOf="@+id/build_status_linear"
            android:src="@drawable/status_line" />

        <LinearLayout
            android:id="@+id/build_status_linear"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/owner_name_relative"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/text_jiaodi"
                    android:textColor="@color/name"
                    android:textSize="@dimen/textsize_12" />

                <ImageView
                    android:id="@+id/img_jiaodi"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/already_sure" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/text_shuidian"
                    android:textColor="@color/name"
                    android:textSize="@dimen/textsize_12" />

                <ImageView
                    android:id="@+id/img_shuidian"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/already_sure" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/text_nimo"
                    android:textColor="@color/name"
                    android:textSize="@dimen/textsize_12" />

                <ImageView
                    android:id="@+id/img_nimo"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/already_sure" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/text_youqi"
                    android:textColor="@color/name"
                    android:textSize="@dimen/textsize_12" />

                <ImageView
                    android:id="@+id/img_youqi"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/already_sure" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/text_jungong"
                    android:textColor="@color/name"
                    android:textSize="@dimen/textsize_12" />

                <ImageView
                    android:id="@+id/img_jungong"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/already_sure" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        style="@style/view_grayd1d1d1_divider"
        android:layout_below="@+id/ll_remind"
        android:layout_marginTop="@dimen/y5" />

    <LinearLayout
        android:id="@+id/ll_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_build_site_item"
        android:layout_marginRight="@dimen/x20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/x5">

        <FrameLayout
            android:layout_width="@dimen/x170"
            android:layout_height="@dimen/x70">

            <TextView
                android:id="@+id/tv_msg_remind"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x60"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_text_gray_stroke"
                android:gravity="center"
                android:text="消息提醒"
                android:textColor="@color/gray_7d7d7d"
                android:textSize="@dimen/textsize_32px" />

            <TextView
                android:id="@+id/tv_msg_remind_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/warn"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_22px" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_build_site_item_material_detail_add_order"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x60"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/shape_text_gray_stroke"
            android:gravity="center"
            android:text="工程增加项"
            android:textColor="@color/gray_7d7d7d"
            android:textSize="@dimen/textsize_32px" />

        <TextView
            android:id="@+id/tv_build_site_item_pay_record"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x60"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_text_gray_stroke"
            android:gravity="center"
            android:text="付款记录"
            android:textColor="@color/gray_7d7d7d"
            android:textSize="@dimen/textsize_32px" />


        <TextView
            android:id="@+id/tv_orders_detail"
            android:layout_width="@dimen/x190"
            android:layout_height="@dimen/x60"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/x20"
            android:background="@drawable/shape_text_gray_stroke"
            android:gravity="center"
            android:text="添加工程量"
            android:textColor="@color/gray_7d7d7d"
            android:textSize="@dimen/textsize_32px"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>