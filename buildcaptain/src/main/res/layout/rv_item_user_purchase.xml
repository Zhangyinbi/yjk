<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_label_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="购买时间 : "
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_label_time"
        android:layout_toRightOf="@id/tv_label_time"
        android:textColor="@color/text_000000"
        android:textSize="17sp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_label_time"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="12dp"
        android:background="@color/gray_d1d1d1"/>

    <TextView
        android:id="@+id/tv_label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_alignLeft="@id/tv_label_time"
        android:layout_below="@+id/divider"
        android:text="材料名称 : "
        android:textColor="@color/bg_black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_label_name"
        android:layout_toRightOf="@id/tv_label_name"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_label_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_label_name"
        android:layout_below="@+id/tv_label_name"
        android:layout_marginBottom="13dp"
        android:text="品        牌 : "
        android:textColor="@color/bg_black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_label_brand_name"
        android:layout_toRightOf="@id/tv_label_brand_name"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_label_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_label_brand_name"
        android:layout_below="@+id/tv_label_brand_name"
        android:text="规格型号 : "
        android:textColor="@color/bg_black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_label_type_name"
        android:layout_toRightOf="@id/tv_label_type_name"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    
    <View
        android:id="@+id/big_divider"
        android:background="@color/background_f0f0f0"
        android:layout_marginTop="16dp"
        android:layout_below="@id/tv_type_name"
        android:layout_width="wrap_content"
        android:layout_height="15dp"/>

</RelativeLayout>