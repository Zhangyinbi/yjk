<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
    <TextView
        android:id="@+id/tv_step"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:textColor="@color/ef4332"
        android:textSize="15sp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_step"
        android:layout_marginBottom="15dp"
        android:background="@color/gray_d1d1d1"/>

    <TextView
        android:id="@+id/tv_label_receivable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginLeft="12dp"
        android:text="应收金额 : "
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_receivable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_label_receivable"
        android:layout_toRightOf="@id/tv_label_receivable"
        android:textColor="@color/ef4332"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_label_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label_receivable"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="已收费用 : "
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_label_received"
        android:layout_toRightOf="@id/tv_label_received"
        android:textColor="@color/ef4332"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_label_received_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label_received"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="收款时间 : "
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_received_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_label_received_time"
        android:layout_toRightOf="@id/tv_label_received_time"
        android:textColor="@color/c949494"
        android:textSize="18sp"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_label_received_time"
        android:layout_marginBottom="15dp"
        android:background="@color/gray_d1d1d1"/>

    <TextView
        android:id="@+id/tv_label_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="明        细 : "
        android:textColor="@color/c949494"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_label_detail"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@id/tv_label_detail"
        android:textColor="@color/c949494"
        android:textSize="18sp"/>

    <View
        android:id="@+id/big_divider"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/tv_detail"
        android:background="@color/background_f0f0f0"/>

</RelativeLayout>