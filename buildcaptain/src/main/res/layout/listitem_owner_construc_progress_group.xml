<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y121"
    android:background="#e5e5e5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/y120"
            android:layout_weight="2"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/listitem_owner_construc_progress_group_image_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x24"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/listitem_owner_construc_progress_group_text_top"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textColor="#000000"
                        android:layout_weight="3"
                        android:textSize="@dimen/textsize_32px" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/listitem_owner_construc_progress_group_text_type"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x24"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:textSize="@dimen/textsize_28px" />

                </LinearLayout>


                <TextView
                    android:id="@+id/listitem_owner_construc_progress_group_text_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textColor="#959595"
                    android:textSize="@dimen/textsize_30px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/y120"
            android:layout_weight="1"
            android:gravity="center_vertical|right">

            <ImageView
                android:id="@+id/listitem_owner_construc_progress_group_image_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x24" />

            <TextView
                android:visibility="gone"
                android:id="@+id/listitem_owner_construc_progress_group_text"
                android:layout_width="@dimen/x100"
                android:layout_height="match_parent"
                android:background="@color/grey_959595"
                android:gravity="center"
                android:text="备注"
                android:textColor="@color/white_style_ffffff"
                android:textSize="@dimen/textsize_26px" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#d2d2d2" />

</LinearLayout>