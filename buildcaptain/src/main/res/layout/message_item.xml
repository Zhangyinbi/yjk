<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f1f1f1"
    android:orientation="vertical"
    android:padding="@dimen/x24">

    <LinearLayout
        android:id="@+id/linear_msg_title_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x24"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <View
            style="@style/view_grayd1d1d1_divider"
            android:layout_marginRight="@dimen/x46"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_msg_title_time"
            style="@style/tv_Gray959595_Szie32"
            android:text="今日"
            android:textSize="@dimen/textsize_30px" />

        <View
            style="@style/view_grayd1d1d1_divider"
            android:layout_marginLeft="@dimen/x46"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_msg_address"
            style="@style/tv_Gray959595_Szie32"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:text="@string/str_test_data1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_msg_time"
                style="@style/tv_Gray959595_Szie32"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                android:text="11-26"
                android:textSize="@dimen/textsize_30px" />

            <TextView
                android:id="@+id/tv_msg_delay_days"
                style="@style/tv_Gray959595_Szie32"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                android:text="11-26"
                android:textColor="@color/red_f65323"
                android:textSize="@dimen/textsize_30px" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_msg_type"
            style="@style/tv_Black000000_Szie32"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y25"
            android:text="五金辅材下单" />

        <View style="@style/view_grayd1d1d1_divider" />

        <TextView
            android:id="@+id/tv_msg_xiadan"
            style="@style/tv_Black000000_Szie32"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="@dimen/y32"
            android:text="去下单"
            android:textSize="@dimen/textsize_34px" />

    </LinearLayout>


</LinearLayout>
