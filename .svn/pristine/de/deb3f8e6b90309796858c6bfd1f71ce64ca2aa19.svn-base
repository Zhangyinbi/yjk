<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_user_purchase"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaomizhuang.buildcaptain.activity.UserPurchaseActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_user_purchase"
        android:layout_above="@+id/btn_contact_owner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无明细"
        android:textColor="#c000"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btn_contact_owner"
        android:visibility="gone"
        android:text="联系业主()"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_red_solid_stroke_radius_9"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
