<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_listitem_comment_child_divide"
        style="@style/view_grayd1d1d1_divider"
        android:layout_height="@dimen/y30"
        android:background="@color/Owner_grey_f0f0f0" />

    <LinearLayout
        android:id="@+id/ll_listitem_comment_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/x15">

        <TextView
            android:id="@+id/tv_listitem_comment_name"
            style="@style/tv_Gray959595_Szie32"
            android:layout_weight="1"
            android:text="工地整体"
            android:textSize="@dimen/textsize_28px" />

        <ImageView
            android:id="@+id/img_listitem_comment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x15"
            android:src="@mipmap/ic_arrow_up" />

    </LinearLayout>



</LinearLayout>
