<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@color/red_c30d22"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/img_title_bar_back"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_title_btn_bg"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_title_btn_bg"
                android:src="@drawable/back" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_bar_question"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_head_question"
                android:enabled="true"
                android:gravity="center"
                android:text="问题"
                android:textColor="@drawable/selector_head_text_question_comment" />

            <TextView
                android:id="@+id/tv_title_bar_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_head_comment"
                android:enabled="false"
                android:gravity="center"
                android:text="评价"
                android:textColor="@drawable/selector_head_text_question_comment" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title_bar_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_title_btn_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:text="添加"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_30px" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_question_comment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
