<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/x5"
    android:paddingLeft="@dimen/x10"
    android:paddingRight="@dimen/x10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y18"
        android:background="@drawable/shape_round_white_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y116"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="选取照片"
            android:textColor="#434343"
            android:textSize="@dimen/textsize_38px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#d2d2d2" />

        <TextView
            android:id="@+id/textView_pop_chang_camera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y116"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:text="拍摄"
            android:textColor="@drawable/selector_text_color_blue"
            android:textSize="@dimen/textsize_38px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#d2d2d2" />

        <TextView
            android:id="@+id/textView_pop_chang_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y116"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:text="相册"
            android:textColor="@drawable/selector_text_color_blue"
            android:textSize="@dimen/textsize_38px" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView_pop_window_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y116"
        android:layout_marginTop="@dimen/y18"
        android:background="@drawable/shape_round_white_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="取消"
        android:textStyle="bold"
        android:textColor="@drawable/selector_text_color_blue"
        android:textSize="@dimen/textsize_38px" />


</LinearLayout>