<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/x15"
    android:paddingLeft="@dimen/x15"
    android:paddingRight="@dimen/x15">

    <View
        android:id="@+id/view_listitem_comment_child_divide"
        style="@style/view_grayd1d1d1_divider"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_listitem_comment_child_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x15"
        android:drawableLeft="@mipmap/good"
        android:drawablePadding="@dimen/x5"
        android:text="已好评"
        android:textColor="@color/green_style_51c12d"
        android:textSize="@dimen/textsize_28px" />

    <TextView
        android:id="@+id/tv_listitem_comment_child_desc"
        style="@style/tv_Gray959595_Szie32"
        android:layout_marginTop="@dimen/y15"
        android:text="所有房子大面积开裂"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_30px" />

    <LinearLayout
        android:id="@+id/ll_listitem_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_listitem_question_desc"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_project_info1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_project_info2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="23dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_project_info3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_listitem_comment_child_date"
            style="@style/tv_Gray959595_Szie32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2016-04-19 16:39:34"
            android:textSize="@dimen/textsize_24px" />

        <TextView
            android:id="@+id/tv_listitem_comment_child_del"
            style="@style/tv_Gray959595_Szie32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            android:text="删除"
            android:textSize="@dimen/textsize_24px" />

    </LinearLayout>

</LinearLayout>
