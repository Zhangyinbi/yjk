<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f1f1f1"
    android:orientation="vertical">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/material_type_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/material_type_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:background="@color/background_dcdcdc"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/material_type_edittext"
                android:layout_width="0dp"
                android:layout_height="@dimen/y80"
                android:layout_margin="@dimen/y20"
                android:layout_weight="1"
                android:background="@drawable/shape_search"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <LinearLayout
                android:id="@+id/material_type_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/x24"
                    android:text="取消"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_36px" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/material_type_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:gravity="center">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="22dp"
                android:src="@mipmap/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:textColor="@color/text_959595"
                android:textSize="@dimen/textsize_35px" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/order_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_style_ffffff"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/line_d2d2d2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/order_all_select"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/order_all_select_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x24"
                    android:src="@mipmap/nochoose" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x12"
                    android:gravity="center"
                    android:text="全选"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_36px" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/x24"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="合计:"
                    android:textColor="@color/gray_7d7d7d"
                    android:textSize="@dimen/textsize_32px" />

                <TextView
                    android:id="@+id/order_all_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0元"
                    android:textColor="@color/text_f39700"
                    android:textSize="22sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/line_d2d2d2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/order_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginRight="@dimen/x24"
                android:background="@drawable/shape_submit_order"
                android:text="确认"
                android:textColor="@color/text_ffffff"
                android:textSize="@dimen/textsize_40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/line_d2d2d2" />

    </LinearLayout>

</LinearLayout>