<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar_container"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/red_c30d22"
    android:gravity="center_vertical">

    <!-- leftImage -->

    <RelativeLayout
        android:id="@+id/left_igame_relative"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector_title_btn_bg"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_title_btn_bg"
            android:src="@drawable/back" />
    </RelativeLayout>

    <!-- leftTextView -->

    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/left_igame_relative"
        android:background="@drawable/selector_title_btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:text="123"
        android:textColor="@color/white_style_ffffff"
        android:textSize="@dimen/textsize_30px"
        android:visibility="gone" />

    <!-- title -->

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_title_btn_bg"
        android:gravity="center"
        android:textColor="@color/white_style_ffffff"
        android:textSize="@dimen/textsize_40px" />

    <!-- rightText -->

    <TextView
        android:id="@+id/right_text1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/right_text0"
        android:background="@drawable/selector_title_btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:textColor="@color/white_style_ffffff"
        android:textSize="@dimen/textsize_30px"
        android:visibility="gone" />

    <TextView
        android:id="@+id/right_text0"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/right_igame0_relative"
        android:background="@drawable/selector_title_btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:textColor="@color/white_style_ffffff"
        android:textSize="@dimen/textsize_30px"
        android:visibility="gone" />

    <!-- rightImage -->

    <RelativeLayout
        android:id="@+id/right_igame2_relative"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@+id/right_igame1_relative"
        android:background="@drawable/selector_title_btn_bg"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/right_image2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_title_btn_bg"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_igame1_relative"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@+id/right_igame0_relative"
        android:background="@drawable/selector_title_btn_bg"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/right_image1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_title_btn_bg"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_igame0_relative"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_title_btn_bg"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/right_image0"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_title_btn_bg"
            android:src="@drawable/abc_ic_menu_cut_mtrl_alpha"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/right_image0_alert_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/right_image0"
            android:layout_alignTop="@+id/right_image0"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y15"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right_text0_alert_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/right_image0"
            android:layout_alignTop="@+id/right_image0"
            android:layout_marginRight="-9dp"
            android:layout_marginTop="-5dp"
            android:gravity="center"
            android:text="99"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_22px"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>