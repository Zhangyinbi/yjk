<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_50"
        android:background="@drawable/shape_round_whitebg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:background="@drawable/phone_icon" />

        <EditText
            android:id="@+id/retrieve_password_et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="@dimen/dimen_10"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/line_little" />

        <Button
            android:id="@+id/retrieve_password_btn_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/code_bg_selecter"
            android:padding="@dimen/dimen_5"
            android:text="获取验证码"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_5"
        android:background="@drawable/shape_round_whitebg"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:background="@drawable/password_icon" />

        <EditText
            android:id="@+id/retrieve_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入验证码"
            android:inputType="phone"
            android:maxLength="8"
            android:padding="@dimen/dimen_10"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_18" />
    </LinearLayout>

    <Button
        android:id="@+id/retrieve_password_btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_50"
        android:background="@drawable/selector_bg_login"
        android:onClick="onClick"
        android:padding="@dimen/dimen_10"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_20" />

</LinearLayout>