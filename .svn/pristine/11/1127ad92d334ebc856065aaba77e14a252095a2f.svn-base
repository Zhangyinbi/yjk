<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yangbang.miowner.activity.PatrolRecordActivity">

    <LinearLayout
        android:id="@+id/ll_patrol_record_header_assist_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/selector_patrol_record_header_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patrol_record_header_assist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部时间"
            android:textColor="@color/gray_959595"
            android:textSize="@dimen/textsize_36px" />

        <ImageView
            android:id="@+id/img_patrol_record_header_assist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_build_greyarrowdown" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_patrol_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
