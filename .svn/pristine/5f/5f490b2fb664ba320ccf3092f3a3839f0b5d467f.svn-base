<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/y200"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:scaleType="centerCrop"
            android:background="@color/imgae_bg_c9c9c9"
            android:id="@+id/aatImgSrc"
            android:layout_width="@dimen/x220"
            android:layout_height="@dimen/y160"
            android:layout_margin="@dimen/x24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/y200"
        android:layout_weight="1.5"
        android:gravity="left|center">

        <TextView
            android:id="@+id/aatTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_7d7d7d"
            android:textSize="@dimen/textsize_40px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y200"
        android:gravity="right|center">

        <ImageView
            android:layout_marginRight="@dimen/x24"
            android:src="@mipmap/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>