<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Owner_grey_f1f1f1"
    android:orientation="vertical">

    <TextView
        android:textSize="@dimen/textsize_28px"
        android:textColor="@color/Owner_grey_959595"
        android:layout_marginLeft="@dimen/x30"
        android:gravity="center_vertical"
        android:text="请在下方输入验证码完成验证"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y110"
        android:background="@drawable/owner_shape_register"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/forget_password_valide_verification_code_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/y100"
            android:layout_margin="@dimen/x2"
            android:layout_weight="1"
            android:background="@color/Owner_white_ffffff"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:textColor="@color/Owner_black_000000"
            android:textSize="@dimen/textsize_26px" />

        <com.example.yangbang.miowner.view.TimeButton
            android:id="@+id/forget_password_valide_gain_code_btn"
            android:layout_width="@dimen/x250"
            android:layout_height="@dimen/y104"
            android:background="@color/Owner_red_e76270"
            android:layout_gravity="center"
            android:text="获取验证码"
            android:textColor="@color/Owner_white_ffffff" />
    </LinearLayout>

</LinearLayout>