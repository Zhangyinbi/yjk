<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_round_white_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_owner_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="业主"
            android:textColor="@drawable/selector_text_color_blue"
            android:textSize="@dimen/textsize_38px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/divier"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tv_project_manager_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="项目经理"
            android:textColor="@drawable/selector_text_color_blue"
            android:textSize="@dimen/textsize_38px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/divier"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tv_designer_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="设计师"
            android:textColor="@drawable/selector_text_color_blue"
            android:textSize="@dimen/textsize_38px" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvBuilder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_text_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="施工人员"
            android:textColor="@drawable/selector_text_color_blue"
            android:textSize="20sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_white_bg"
        android:clickable="true"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="取消"
        android:textStyle="bold"
        android:textColor="@drawable/selector_text_color_blue"
        android:textSize="@dimen/textsize_38px" />

</LinearLayout>