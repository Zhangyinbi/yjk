<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fm_material_detail_header_assist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_fm_material_detail_header_assist_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/selector_build_deatil_header_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fm_material_detail_header_assist_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部时间"
                android:textColor="@color/gray_959595"
                android:textSize="@dimen/textsize_36px" />

            <ImageView
                android:id="@+id/imgv_fm_material_detail_header_assist_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_build_greyarrowdown" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/as_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_style_ffffff" />

</LinearLayout>