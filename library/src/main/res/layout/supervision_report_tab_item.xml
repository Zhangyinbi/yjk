<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_svs_re_tab_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y80"
    android:layout_weight="1"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_svs_re_tab_content"
        style="@style/Tab_959595_32_Tv"
        android:layout_centerInParent="true"
        android:text="@string/str_explanation" />

    <TextView
        android:id="@+id/tv_svs_re_tab_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_svs_re_tab_content"
        android:layout_alignTop="@+id/tv_svs_re_tab_content"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="-8dp"
        android:background="@drawable/warn"
        android:gravity="center"
        android:text="99"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_22px"
        android:visibility="gone" />

    <View
        android:id="@+id/view_svs_re_tab_indicator"
        style="@style/view_red_e76170_5px_indicator"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>
